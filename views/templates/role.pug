div(class="row p-4")
    div(class="col-lg-4")
        div(class="company-logo")
            if role.roundLogo
                img(src="img/" + role.logo class="company-img round")
            else
                img(src="img/" + role.logo class="company-img")
    div(class="col-lg-8")
        div(class="row")
            div(class="col")
                h2(class="role-title")=role.title
        div(class="row")
            div(class="col")
                p(class="role-company")=role.company
        div(class="row")
            div(class="col")
                p(class="role-dates")=role.start + ' - ' + role.end
        div(class="row")
            div(class="col")
                ul(class="role-highlights-list")
                    each highlight in role.highlights
                        li(class="role-highlights-item")=highlight